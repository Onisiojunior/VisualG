// Seção de Declarações 
var
numero1, resultado1, resultado2:real
inicio
escreval ("escreva um numero")
leia (numero1)
resultado1 <-( numero1 + 1)
resultado2 <-( numero1 - 1)
escreval("numero antecesor",resultado2)
escreval("numero sucessor", resultado1)
fimalgoritmo
